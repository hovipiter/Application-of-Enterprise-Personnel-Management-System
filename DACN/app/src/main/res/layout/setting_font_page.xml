<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/top_bg_for_setting_page"
            android:gravity="center_horizontal"
            android:layout_height="170dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/setting_back_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/description"
                android:src="@drawable/back_setting"/>
            <TextView
                android:id="@+id/setting_font_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_font_title"
                android:layout_gravity="start"
                android:layout_marginTop="70dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    tools:ignore="UselessParent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar">
                        <TextView
                            android:id="@+id/setting_font_select_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/setting_font_select_font"
                            style="@style/text"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <RadioGroup
                            android:id="@+id/fontRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp">
                            <RadioButton
                                android:id="@+id/radioOpen_sans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/radioOpen_sans"
                                style="@style/text"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/radioDancing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/radioDancing"
                                style="@style/text"
                                android:textSize="14sp" />
                            <RadioButton
                                android:id="@+id/radioComfortaa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/radioDancing"
                                style="@style/text"
                                android:textSize="14sp" />
                        </RadioGroup>
                    </LinearLayout>
                </ScrollView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
