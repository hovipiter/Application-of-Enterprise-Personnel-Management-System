<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/background"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="9"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/project_page_new_task_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/project_page_new_task_btn"
                                style="@style/button_text"
                                android:textSize="12sp"
                                tools:ignore="InefficientWeight" />
                        </LinearLayout>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            style="@style/background"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/background"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="10dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/project_page_number1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/project_page_number1"
                                            android:contextClickable="false"
                                            android:inputType="none"
                                            style="@style/text"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="35sp"
                                            />

                                        <TextView
                                            android:id="@+id/project_page_all_project"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/project_page_all_project"
                                            android:gravity="center"
                                            style="@style/text"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="14sp"
                                            android:background="@drawable/no_underline_for_edt" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="10dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/project_page_number2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/project_page_number2"
                                            android:inputType="none"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="35sp"
                                            android:background="@drawable/no_underline_for_edt" />
                                        <TextView
                                            android:id="@+id/project_page_unfinished"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/project_page_unfinished"
                                            android:textColor="@color/red"
                                            android:gravity="center"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="14sp"
                                            android:background="@drawable/no_underline_for_edt" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="10dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/project_page_number3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/project_page_number3"
                                            android:inputType="none"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="35sp"
                                            android:background="@drawable/no_underline_for_edt" />

                                        <TextView
                                            android:id="@+id/project_page_finish"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/project_page_finish"
                                            android:clickable="false"
                                            android:textColor="@color/blue"
                                            android:gravity="center"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="14sp"
                                            android:background="@drawable/no_underline_for_edt" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </HorizontalScrollView>

                        <TextView
                            android:id="@+id/project_page_list_project"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/text"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:textSize="20sp"
                            android:text="@string/project_page_list_project" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rcv_projectlist"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="parent"
                                        android:layout_marginTop="10dp"
                                        android:visibility="visible"
                                        tools:layout_editor_absoluteX="50dp"
                                        tools:listitem="@layout/project_item" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/navigation_bottom"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
