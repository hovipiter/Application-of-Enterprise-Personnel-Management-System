<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/background"
    android:layout_height="match_parent"
    tools:context=".forgot_pass">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/forgot_pass_page_forgotpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_pass_page_forgotpass"
                style="@style/text"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:targetApi="jelly_bean" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/assert_account"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/forgot_pass_page_staffID_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/forgot_pass_page_staffID_input"
                style="@style/drawable_assert_and_text"
                android:textSize="14sp"
                android:padding="12dp"
                android:inputType="text"
                android:layout_marginTop="32dp"
                tools:targetApi="jelly_bean"/>

            <EditText
                android:id="@+id/forgot_pass_page_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/forgot_pass_page_email_input"
                style="@style/drawable_assert_and_text"
                android:textSize="14sp"
                android:padding="12dp"
                android:inputType="text"
                android:layout_marginTop="16dp"
                tools:targetApi="jelly_bean"/>

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/forgot_pass_page_button_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_pass_page_button_reset"
                android:textStyle="bold"
                android:textSize="18sp"
                style="@style/button_text"
                android:layout_marginTop="12dp"
                android:padding="12dp"/>

            <TextView
                android:id="@+id/forgot_pass_page_textview_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_pass_page_textview_signin"
                style="@style/text"
                android:textSize="14sp"
                tools:targetApi="jelly_bean"
                android:layout_marginTop="32dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
