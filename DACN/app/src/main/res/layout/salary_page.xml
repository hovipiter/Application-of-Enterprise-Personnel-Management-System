<?xml version="1.0" encoding="UTF-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/background"
    tools:context=".MainActivity"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/salary_page_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/salary_page_title"
                            style="@style/text"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:id="@+id/salary_page_salary"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                style="@style/text"
                                android:text="@string/salary_page_salary"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/salary_page_salary_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/salary_page_salary_number"
                                android:textSize="18sp"
                                android:textColor="@color/red"
                                android:gravity="end"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:id="@+id/salary_page_award"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/salary_page_award"
                                style="@style/text"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/salary_page_award_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/salary_page_award_number"
                                android:textColor="@color/blue"
                                android:textSize="18sp"
                                android:gravity="end"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:id="@+id/salary_page_other_fee"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/salary_page_other_fee"
                                style="@style/text"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/salary_page_other_fee_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/salary_page_other_fee_number"
                                android:textColor="@color/blue"
                                android:textSize="18sp"
                                android:gravity="end"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:id="@+id/salary_page_sum"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/salary_page_sum"
                                style="@style/text"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/salary_page_sum_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/salary_page_sum_number"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="end"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="end"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:layout_marginTop="15dp">
<!--                            <TextView-->
<!--                                android:id="@+id/salary_page_detail"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:text="@string/salary_page_detail"-->
<!--                                android:textSize="13sp"-->
<!--                                android:gravity="end"/>-->
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:layout_marginTop="35dp">
                            <TextView
                                android:id="@+id/salary_detail_page_startday_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/salary_detail_page_startday"
                                style="@style/text"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/salary_detail_page_startday"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@string/salary_detail_page_receive_day"
                                style="@style/text"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:layout_marginTop="5dp"
                            android:paddingEnd="10dp">
                            <TextView
                                android:id="@+id/salary_detail_page_receive"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/salary_detail_page_receive"
                                style="@style/text"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/salary_detail_page_receive_day"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@string/salary_detail_page_receive_day"
                                style="@style/text"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="35dp">
                            <TextView
                                android:id="@+id/salary_page_search"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                style="@style/text"
                                android:text="@string/salary_page_search"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:id="@+id/salary_page_month"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/salary_page_month"
                                style="@style/text"
                                android:textSize="16sp" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/salary_page_month_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="Select month"
                                    android:hint="@string/salary_page_month_number"
                                    style="@style/text"
                                    android:background="@drawable/no_underline_for_edt"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:layout_marginTop="10dp">

                            <!-- Phần thứ nhất chứa TextView "Năm" -->
                            <TextView
                                android:id="@+id/salary_page_year"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/salary_page_year"
                                style="@style/text"
                                android:textSize="16sp" />

                            <!-- Phần thứ hai chứa LinearLayout con -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <!-- EditText chứa hint "2012" -->
                                <EditText
                                    android:id="@+id/salary_page_year_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/salary_page_year_number"
                                    style="@style/text"
                                    android:background="@drawable/no_underline_for_edt"/>
                            </LinearLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/salary_page_search_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_gravity="center_horizontal"
                            style="@style/button_text"
                            android:text="@string/salary_page_search_btn"/>
                    </LinearLayout>
                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>