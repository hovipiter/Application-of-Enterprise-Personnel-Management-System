<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="12dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="11"
            >
            <TextView
                android:id="@+id/itemtv_forumtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="Title"
                android:textSize="20sp"
                android:layout_weight="10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemtv_forumcontent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="start"
                android:text="Nội dung của bài viết thảo luận đó"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/itemimgbtn_forumlike"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/like3"/>
                <TextView
                    android:id="@+id/itemtv_forumlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="50dp"
                    android:text="Thích"/>

                <ImageButton
                    android:id="@+id/itemimgbtn_forumcmt"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment3"/>
                <TextView
                    android:id="@+id/itemtv_forumcmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="50dp"
                    android:text="Bình luận"/>

                <ImageButton
                    android:id="@+id/itemimgbtn_forumshare"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/share"/>
                <TextView
                    android:id="@+id/itemtv_forumshare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Chia sẻ"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
