<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@color/white"
android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="56dp"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/navigation_bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/top_bg_for_setting_page"
        android:gravity="center_horizontal"
        android:layout_height="170dp"
        android:orientation="vertical">
        <ImageView
            android:contentDescription="@string/description"
            android:id="@+id/setting_back_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/back_setting" />
        <TextView
            android:id="@+id/setting_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_page_title"
            android:layout_gravity="start"
            android:layout_marginTop="80dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bottom_gb_for_user_page"
                android:orientation="vertical"
                android:fadingEdgeLength="10dp">
            <!--app:layout_constraintTop_toBottomOf="@+id/textView2" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/setting_page_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_page_account"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp" />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/setting_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:contentDescription="@string/description"
                        android:id="@+id/imageViewDateofBirth"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/logout" />

                    <TextView
                        android:id="@+id/setting_page_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_page_logout"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:contentDescription="@string/description"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/forward" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_deletAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:contentDescription="@string/description"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.173"
                        android:background="@drawable/delete" />
                    <TextView
                        android:id="@+id/setting_page_delete_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_page_delete_account"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="25dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:contentDescription="@string/description"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/forward" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/settring_page_general_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settring_page_general_information"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:contentDescription="@string/description"
                        android:id="@+id/imageView4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.173"
                        app:srcCompat="@drawable/notification" />
                    <TextView
                        android:id="@+id/setting_page_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_page_notification"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:contentDescription="@string/description"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/forward" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:contentDescription="@string/description"
                        android:id="@+id/imageView9"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.173"
                        app:srcCompat="@drawable/foreign" />
                    <TextView
                        android:id="@+id/setting_page_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_page_language"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:contentDescription="@string/description"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/forward" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:contentDescription="@string/description"
                        android:id="@+id/imageView3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.173"
                        app:srcCompat="@drawable/nightmode" />
                    <TextView
                        android:id="@+id/setting_page_darkmode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_page_darkmode"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        tools:ignore="UseSwitchCompatOrMaterialXml"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/setting_page_about_application"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_page_about_application"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:contentDescription="@string/description"
                        android:id="@+id/imageView5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.173"
                        app:srcCompat="@drawable/help" />
                    <TextView
                        android:id="@+id/setting_page_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_page_help"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:contentDescription="@string/description"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/forward" />
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:contentDescription="@string/description"
                    android:id="@+id/imageView8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.173"
                    app:srcCompat="@drawable/information" />
                <TextView
                    android:id="@+id/setting_page_delete_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_page_delete_about"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:contentDescription="@string/description"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/forward" />
            </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
    <include
        android:id="@+id/navigation_bottom"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
