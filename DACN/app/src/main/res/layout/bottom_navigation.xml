<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/navigation_bottom_page"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    style="@style/background"
    android:elevation="4dp">
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/background"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/nav_home_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home" />
        <TextView
            android:id="@+id/dashboard_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_home"
            style="@style/text" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        style="@style/background"
        android:gravity="center">
        <ImageView
            android:id="@+id/nav_task_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/task" />
        <TextView
            android:id="@+id/dashboard_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text"
            android:text="@string/dashboard_task" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav_person"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/nav_person_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person" />
        <TextView
            android:id="@+id/dashboard_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text"
            android:text="@string/dashboard_person" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/nav_settings_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/setting" />
        <TextView
            android:id="@+id/dashboard_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text"
            android:text="@string/dashboard_setting" />
    </LinearLayout>
</LinearLayout>
