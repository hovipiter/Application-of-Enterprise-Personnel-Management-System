<?xml version="1.0" encoding="UTF-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="60dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/project_detail_edit_page_project_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/project_detail_edit_page_project_name"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginEnd="50dp"
                                android:layout_marginStart="10dp"
                                android:textSize="25sp" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                            <Button
                                android:id="@+id/project_detail_edit_page_save_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:textSize="14sp"
                                android:backgroundTint="@color/teal"
                                android:layout_marginEnd="20dp"
                                android:text="@string/project_detail_edit_page_save_btn" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="5"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/project_detail_edit_page_start_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="2"
                                android:text="@string/project_detail_edit_page_start_day"
                                android:textSize="14sp" />
                            <EditText
                                android:id="@+id/project_detail_edit_page_get_startday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:layout_weight="3"
                                android:cursorVisible="false"
                                android:background="@drawable/no_underline_for_edt"
                                android:focusable="false"
                                android:hint="@string/project_detail_edit_page_get_startday"
                                android:gravity="start"
                                android:padding="12dp"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="5"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/project_detail_edit_page_end_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@string/project_detail_edit_page_end_day"
                                android:layout_marginStart="10dp"
                                android:textSize="14sp" />
                            <EditText
                                android:id="@+id/project_detail_edit_page_get_end_day"
                                android:background="@drawable/no_underline_for_edt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:layout_weight="3"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:hint="@string/project_detail_edit_page_get_end_day"
                                android:gravity="start"
                                android:padding="12dp"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="5"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/project_detail_edit_page_timeleft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@string/project_detail_edit_page_timeleft"
                                android:layout_marginStart="10dp"
                                android:textSize="14sp"
                                android:textColor="@color/red"/>
                            <TextView
                                android:id="@+id/project_detail_edit_page_get_timeleft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:hint="@string/project_detail_edit_page_get_timeleft"
                                android:background="@drawable/no_underline_for_edt"
                                android:gravity="start"
                                android:padding="12dp"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/line"/>
                        <TextView
                            android:id="@+id/project_detail_edit_page_member"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginStart="10dp"
                            android:text="@string/project_detail_edit_page_member"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:orientation="horizontal">
                            <ImageButton
                                android:contentDescription="@string/description"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/assert_account"/>
                            <ImageButton
                                android:contentDescription="@string/description"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/assert_account"/>
                            <ImageButton
                                android:contentDescription="@string/description"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/assert_account"/>
                            <ImageButton
                                android:contentDescription="@string/description"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/assert_add_circle"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/project_detail_edit_page_describe_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/project_detail_edit_page_describe_title"
                                android:textSize="18sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"/>
                            <EditText
                                android:id="@+id/project_detail_edit_page_describe_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/project_detail_edit_page_describe_content"
                                android:textSize="14sp"
                                android:background="@drawable/no_underline_for_edt"
                                android:layout_marginTop="5dp"
                                android:paddingStart="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:id="@+id/project_detail_detail_page_task"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/silver"
                                    android:background="@color/silver"
                                    android:padding="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="@color/red"
                                    android:textSize="18sp"
                                    android:layout_gravity="center"
                                    android:text="@string/project_detail_detail_page_task" />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />
                                <TextView
                                    android:id="@+id/project_detail_edit_page_add_task"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/teal"
                                    android:padding="5dp"
                                    android:layout_marginEnd="20dp"
                                    android:gravity="center"
                                    android:textSize="18sp"
                                    android:layout_gravity="end"
                                    android:text="@string/project_detail_edit_page_add_task" />
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
    <include
        android:id="@+id/navigation_bottom"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
